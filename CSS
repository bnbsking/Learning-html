#myid .myclass myem{font-size: 200%; color:blue; background-color:gray;}

p.monospace{font-family: "Courier New", Courier, monospace;}
p.example{font-size: x-large; font-style: italic; font-weight: bold; color: green; text-align: center; text-decoration: underline}

td.top{vertical-align: top;}
td.middle{vertical-align: middle;}
td.bottom{vertical-align: bottom;}

span.sub{vertical-align: sub;}

p{text-indent: 20px; text-shadow: 2px 2px 2px grey;}



